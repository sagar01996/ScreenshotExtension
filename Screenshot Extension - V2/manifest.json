{
    "manifest_version": 2,
    "name": "Screenshot Extension - V2",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "desktopCapture",
      "tabs",
      "downloads"
    ],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  